!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta{property: "og:image", content: image_url('mosaic_halbsepia_100pc.jpg')}
    %meta{property: "og:title", content: "Wahlplakat-o-mat"}
    %meta{name: "description", content: "Wahlplakat-o-mat. Wie gut kennst du die Plakate zur Bundestagswahl 2013?"}
